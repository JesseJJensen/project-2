<h1>Show Page</h1>

<ul>
    <li>
        <h3>Book id:<%= book[0].id %></h3>

        <img src="<%= book.imageLinks %>" alt="<%= book.title %>" style="height: 100px; width: auto;">
        <form method="POST" action="/faves">
            <input type="submit" value="Add to Favorites">
            <input type="hidden" name="title" value="<%= book.title %>">
            <input type="hidden" name="authors" value="<%= book.authors %>">
            <input type="hidden" name="bookId" value="<%= book.publishedDate %>">
        </form>
        <form method="POST" action="/faves/<%=book.id%>?_method=DELETE">
            <button type="submit" class="btn btn-danger">
              Delete this category
            </button>
        </form>
    </li>

</ul>