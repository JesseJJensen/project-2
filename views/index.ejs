<div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-xs-12">
          <img class="hero" src="">
        </div>
      </div>
      <h1>Latest Book Summaries</h1>
  
      <% articles.forEach((a, index) => { %>
        <div class="well">
          <h2>
            <a href="/articles/<%= a.id %>"><%= a.title %></a>
            <small>by <%= a.author.getFullName() %></small>
            <a href="/articles/<%= a.id %><%= index %>">Edit</a>
            <form method="POST" action="/delete/<%= a.dataValues.idx %>?_method=DELETE"><button class="btn btn-outline-danger" >Remove Article</button></form>
          </h2>
          <p>
            <strong><%= moment(a.createdAt).calendar() %></strong>
          </p>
        </div>
      <% }) %>
  
    </div>
    <div class="col-sm-4">
      <h2>About</h2>
      <p>Books! Find, Add, Summarize!</p>
    </div>
  </div>
  